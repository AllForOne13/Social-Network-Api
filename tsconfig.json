{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src", // updated this line
    "typeRoots": ["./node_modules/@types"], // updated this line
    "moduleResolution": "node", // added this line
    "baseUrl": ".", // added this line
    "paths": {
      "*": ["node_modules/*"] // added this line
    }
  },
  "include": [
    "./src/**/*" // updated this line
  ],
  "exclude": [
    "./node_modules", // updated this line
    "./dist" // updated this line
  ]
}
